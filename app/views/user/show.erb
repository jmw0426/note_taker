<div class="home">
    <h1>Welcome back, <%= current_user.username %>!</h1><br>

    <h2>Here Are Your Notes</h2><br><br>

    <div class="list">
        <% if current_user.notes.empty? %>
            <a href="/notes/new">Take some notes!</a><br><br>
        <% else %>
            <% current_user.notes.each do |note| %> 
                <div class="note-content"><a href="/notes/<%= note.id %>"><%= note.content %></a></div><br>
            <% end %>
        <% end %>
    </div>
</div>

<div class="logout">
    <a href='/logout'>Logout</a>
</div>
    